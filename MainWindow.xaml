<Window x:Class="checkList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:checkList"
        mc:Ignorable="d"
        Title="MainWindow" Height="425.59" Width="288.926">
    <Grid>
        <Canvas>
            <Button x:Name="walmartButton" Canvas.Left="56" Canvas.Top="135" Width="161" Click="walmartButton_Click" Height="45">
                <Canvas >
                    <TextBlock Text="Walmart" Canvas.Left="-62" Canvas.Top="-10" FontFamily="Raleway" FontSize="16"/>
                    <Image Source="walmartlog.png" Width="54" Height="44" Canvas.Left="16" Canvas.Top="-21" />
                </Canvas>
            </Button>
            <Button x:Name="chedrauiButton" Canvas.Left="56" Canvas.Top="200" Width="161" Click="chedrauiButton_Click" Height="48">
