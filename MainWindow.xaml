                    <Image Source="chedrauilog.png" Width="56" Height="46" Canvas.Left="12" Canvas.Top="-23"/>
                </Canvas>
            </Button>
            <Button x:Name="sorianaButton" Canvas.Left="56" Canvas.Top="270" Width="161"  Click="sorianaButton_Click" Height="43">
                <Canvas >
                    <TextBlock Text="Soriana" Canvas.Left="-57" Canvas.Top="-9" FontFamily="Raleway" FontSize="16"/>
                    <Image Source="sorianalog.png" Width="53" Height="42" Canvas.Left="18" Canvas.Top="-22"/>
                </Canvas>
            </Button>
            <Label Content="Nombre:" Canvas.Left="30" Canvas.Top="74" FontFamily="Raleway" FontSize="16"/>
            <Label Content="CheckList" Canvas.Top="10" Canvas.Left="95" FontFamily="Raleway" FontSize="16"/>
            <TextBox x:Name="nombreBox" Width="141" Canvas.Left="110" Canvas.Top="74" Height="27"/>
        </Canvas>

    </Grid>
</Window>
